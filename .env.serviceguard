# ServiceGuard Configuration for Helidon MP
SERVICEGUARD_API_KEY=your_serviceguard_api_key_here
SERVICEGUARD_ENVIRONMENT=production
SERVICEGUARD_ALERT_EMAIL=admin@company.com
SERVICEGUARD_SLACK_WEBHOOK=your_slack_webhook_url

# Application Configuration
APP_NAME=helidon-serviceguard
APP_VERSION=1.0.0

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Database Configuration (optional)
DATABASE_URL=jdbc:h2:mem:test
DATABASE_USER=sa
DATABASE_PASSWORD=

# Grafana Configuration
GRAFANA_PASSWORD=admin123

# Java Configuration
JAVA_OPTS=-Xmx1g -Xms512m -XX:+UseG1GC

# Monitoring Thresholds
MEMORY_WARNING_THRESHOLD=80
MEMORY_CRITICAL_THRESHOLD=90
CPU_WARNING_THRESHOLD=70
CPU_CRITICAL_THRESHOLD=85
RESPONSE_TIME_THRESHOLD=2000